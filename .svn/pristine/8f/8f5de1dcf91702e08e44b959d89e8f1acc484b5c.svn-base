@import './public.styl'

/* uft-8 */
html,body,ul,li,ol,dl,dd,dt,p,h1,h2,h3,h4,h5,h6,form,fieldset,legend,img {
    margin: 0;
    padding: 0
}
body, html{
    font: 14px/1.5 "Microsoft YaHei", Arial
    transition: all .3s linear
}
fieldset,img {
    border: 0
}
img {
    display: block
}
address,caption,cite,code,dfn,th,var {
    font-style: normal;
    font-weight: normal
}
ul,ol {
    list-style: none
}
input {
    padding-top: 0;
    padding-bottom: 0;
}
input::-moz-focus-inner {
    border: 0;
    padding: 0
}
select,input {
    vertical-align: middle
}
select,input,textarea {
    font-size: 12px;
    margin: 0
}
input[type="text"],input[type="password"],textarea {
    outline-style: none;
    -webkit-appearance: none
}
textarea {
    resize: none
}
table {
    border-collapse: collapse
}
a {
    color: #333;
    text-decoration: none;
}


.clear{
    clear: both;
}
.clear::after{
    content: "";
    display: table;
}
.baseW-750 {
    max-width: 750px;
    margin: auto;
}
.Mg15{
    margin 0 .9375rem /* 15/16 */
}

.MgT15 {
    margin-top: 15px;
}

.MgT30 {
    margin-top: 30px;
}

.MgT40 {
    margin-top: 40px;
}

// 轮播图
.carousel-box{
    margin: 30px 0;
    position: relative;
}
.carousel-box .carousel-main-box {
    height 120px
    margin: 0;
    overflow: hidden;
    position: relative;
}
.carousel-main-box .carousel-wrapper{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transition: all .3s linear
}
.carousel-wrapper .carousel-item{
    flex: 0 0 183px;
    font-size: 18px;
    color: #fff;
    text-align: center;
    height: 120px;
    margin-right: 20px;
}
.carousel-wrapper .carousel-item:last-child{
    margin-right: 0;
}
.carousel-wrapper .carousel-item img{
    display: block;
    width: 100%;
    height: 100%;
    background: #22cad0;
}

.carousel-box .btn{
    position: absolute;
    top: 50%;
    width: 30px;
    height: 30px;
    margin-top: -15px;
}
.carousel-box .btn.prev{
    left: 0;
    background: url("http://lib.albers.top/images/icon/arrow-left.png") no-repeat center center;
    background-size: contain;
}
.carousel-box .btn.next{
    right: 0;
    background: url("http://lib.albers.top/images/icon/arrow-right.png") no-repeat center center;
    background-size: contain;
}

.referral-msg{
    margin-top 30px
}
.referral-msg p {
    font-size .75rem /* 12/16 */
    line-height 24px
    text-indent 20px
}
.referral-msg a {
    font-size 1rem /* 16/16 */
    line-height 35px
    margin-left 20px
}
     
