<script type="text/javascript">
    layui.use(['upload','form','layer'],function(){
        var upload = layui.upload,
            form = layui.form,
            layer = layui.layer;

        var uploadInst = upload.render({
            elem: '#files' //绑定元素
            ,url: 'http://dlx.albers.top/auto/image' //上传接口
            ,before: function(obj){
                layer.load();
            }
            ,done: function(res){
                //上传完毕回调
                if(res.code == 1){
                    $('#picId').val(res.id);
                    $('#preview').attr('src',res.url).css('display','inline-block');
                }
                layer.closeAll('loading'); //关闭loading
            }
            ,error: function(){
                //请求异常回调
            }
        });

        form.verify({
            username: function(value, item){ //value：表单的值、item：表单的DOM对象
                if(!new RegExp("^[a-zA-Z0-9_\u4e00-\u9fa5\\s·]+$").test(value)){
                    return '用户名不能有特殊字符';
                }
                if(/(^\_)|(\__)|(\_+$)/.test(value)){
                    return '用户名首尾不能出现下划线\'_\'';
                }
                if(/^\d+\d+\d$/.test(value)){
                    return '用户名不能全为数字';
                }
            }
        });

        // 表单提交
        form.on('submit(*)',function(data){
            $.post('http://ims.861718.com/auto/viewer',data.field,function(result){
                var event = $.parseJSON(result);
                if(event.code == 1){
                    $('.alert').fadeIn(300);
                    $('.alert .msg').find('span').html(event.msg)
                }else{
                    layer.alert(event.msg,{icon:2},function(index){
                        layer.close(index)
                    })
                }
            })
            return false;
        })
    })
    $(function(){
        // 关闭
        $('.close').click(function(){
            $('.alert').fadeOut(300, function() {
                // 刷新界面
                window.location.reload()
            });
        })
    })
</script>
