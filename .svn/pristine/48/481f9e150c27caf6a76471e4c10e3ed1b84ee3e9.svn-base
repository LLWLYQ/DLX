// 轮播图
.carousel-box{
    margin: 30px 0;
    position: relative;
}
.carousel-box .carousel-main-box {
    min-height: 180px;
    margin: 0 50px;
    overflow: hidden;
    position: relative;
}
.carousel-main-box .carousel-wrapper{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transition: all .3s linear
}
.carousel-wrapper .carousel-item{
    flex: 0 0 237px;
    font-size: 18px;
    color: #fff;
    text-align: center;
    height: 180px;
    margin-right: 20px;
}
.carousel-wrapper .carousel-item:last-child{
    margin-right: 0;
}
.carousel-wrapper .carousel-item img{
    display: block;
    width: 100%;
    height: 180px;
    background: #22cad0;
}

.carousel-box .btn{
    position: absolute;
    top: 50%;
    width: 30px;
    height: 30px;
    margin-top: -15px;
}
.carousel-box .btn.prev{
    left: 0;
    background: url("http://lib.albers.top/images/icon/arrow-left.png") no-repeat center center;
    background-size: contain;
}
.carousel-box .btn.next{
    right: 0;
    background: url("http://lib.albers.top/images/icon/arrow-right.png") no-repeat center center;
    background-size: contain;
}

