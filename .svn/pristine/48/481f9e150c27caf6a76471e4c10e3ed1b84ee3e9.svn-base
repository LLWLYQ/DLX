/* 弹框 */
.alert {
    display: none;
    position: fixed;
    left: 50%;
    top: 50%;
    width: 310px;
    height: 185px;
    background: #fff;
    margin: -92.5px 0 0 -155px;
    padding: 12px;
    border-radius: 5px;
    box-sizing: border-box;
    box-shadow: 1px 1px 10px rgba(0, 0, 0, .3)
}
.alert .title {
    font-size: 14px;
    font-weight: bold;
    width: 280px;
    margin: auto;
    padding-bottom: 5px;
    border-bottom: 2px solid #5abce3;
}
.alert .msg {
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin-top: 34px;
}
.alert .msg img {
    margin-right: 10px;
}
/* 关闭按钮 */
.close {
    width: 63px;
    height: 26px;
    margin: 20px auto 0;
    background: url(http://car.861718.com/images/close.png) no-repeat;
    position: relative;
    top: 10px;
}