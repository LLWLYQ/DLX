/*公用头*/
.base-tit{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 70px;
    padding: 10px;
    box-sizing: border-box;
    background: #e5e2e2;
}
.base-tit .base-tit_left h1{
    font-size: 20px;
    font-weight: 500;
    color: #006ed4;
}
.base-tit .base-tit_left p{
    color: #727171;
}
.base-tit .base-tit_right{
    font-size: 14px;
    color: #006ed4;
}

/* 带左边框 */
.base-tit-left{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.base-tit-left h1{
    font-size: 22px;
    font-weight: inherit;
    padding-left: 20px;
    border-left: 5px solid #00a0ea;
}
.base-tit-left a{
    color: #00a0ea;
}

// 淡入动画
.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to  {
  opacity: 0;
}